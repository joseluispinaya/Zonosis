<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zonosis.Mobile.Pages.AdoptionSuccessPage">
    <VerticalStackLayout
        HorizontalOptions="Center"
        Spacing="25"
        VerticalOptions="Center">
        <Image x:Name="image"
               Scale="0.1"
            HeightRequest="250"
            Source="undraw_confirmed"
            WidthRequest="250" />
        <Label
            FontAttributes="Bold"
            FontSize="30"
            Text="Adopción exitosa"
            TextColor="{StaticResource Primary}" />
        <Button Style="{StaticResource btnPrimary}" Text="Explora más mascotas"
                Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>